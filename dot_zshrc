# If you come from bash you might have to change your $PATH.
# export PATH=$HOME/bin:$HOME/.local/bin:/usr/local/bin:$PATH

# Homebrew (https://brew.sh)
[ -f ~/.homebrew.sh ] && source ~/.homebrew.sh

# Oh My Zsh (https://ohmyz.sh/)
[ -f ~/.oh-my-zsh.sh ] && source ~/.oh-my-zsh.sh

# Chezmoi (https://www.chezmoi.io/)
[ -f ~/.chezmoi.sh ] && source ~/.chezmoi.sh

# Finicky (https://github.com/johnste/finicky)
[ -f ~/.setup.finicky.sh ] && source ~/.setup.finicky.sh

# 1Password (https://1password.com)
[ -f ~/.1password.sh ] && source ~/.1password.sh

# Load Secrets - off by default as it requires 1Password authorization during shell startup
# [ -f ~/.secrets.sh ] && source ~/.secrets.sh

# User configuration

# export MANPATH="/usr/local/man:$MANPATH"

# You may need to manually set your language environment
# export LANG=en_US.UTF-8

# Preferred editor for local and remote sessions
# if [[ -n $SSH_CONNECTION ]]; then
